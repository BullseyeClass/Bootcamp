@model Bootcamp.Models.SignInPage.SignIn
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/SignIn/Sign_In_Layout.cshtml";
}

<section class="vh-100%" style="background-color:#e9ecef; height:100%; width:100%">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5" style="margin-top:-150px">
                <div class="card shadow-2-strong">
                    <div class="card-body p-5 text-center">

                        <a class="inline-block focus:outline-none focus:ring-offset-2 focus:ring-offset-primary focus:ring-2 focus:ring-grey-darkest" asp-controller="Breakinto" asp-action="Index" title="Home Page">
                            <img src="~/Images/bullseye.png" style="width:10rem; margin-top:-2rem; margin-bottom:-2rem"/>
                        </a>

                        <form asp-action="signIn" method="post">
                            <div class="form-outline mb-4">
                                <label asp-for="Email" class="form-label" id="labels"></label>
                                <input asp-for="Email" class="form-control form-control-lg" style="border-color:#1977cc; background-color:#e9ecef" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-4">
                                <label asp-for="Password" class="form-label" id="labels"></label>
                                <input asp-for="Password" type="password" class="form-control form-control-lg" style="border-color:#1977cc; background-color:#e9ecef" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-check d-flex justify-content-start mb-4">
                                <input class="form-check-input" type="checkbox" value="" id="form1Example3" style="border:1px solid #2c4964" />
                                <label class="form-check-label" style="margin-left:10px; color:#2c4964"> Remember Me </label>
                                <a style="font-style:italic; color:#2c4964; text-decoration:underline" class="lost" href="#">Lost Password?</a>
                            </div>

                            <button class="btn btn-primary btn-lg btn-block" type="submit" style="width:100%; background-color:#1977cc; border:none; margin-bottom:20px">SIGN IN</button>
                        </form>

                        <div class="overlap-container">
                            <hr class="my-4">
                            <div class="overlap-text"><b>OR SIGN IN WITH</b></div>
                        </div>

                        <button class="btn btn-lg btn-block btn-primary btn-none" id="social-btn" style="width:100%; border:1px solid  black; margin-top:30px" type="submit">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-facebook" viewBox="0 0 16 16">
                                <path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z" />
                                <span class="social">
                                    <b id="social-text" style="margin-left:10px">FACEBOOK</b>
                                </span>
                            </svg>
                        </button>

                        <button class="btn btn-lg btn-block btn-primary btn-none mb-2" id="social-btn" style="width:100%; border:1px solid  black; margin-top:15px" type="submit">
                            <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="18" height="18" viewBox="0 0 48 48">
                                <path fill="#FFC107" d="M43.611,20.083H42V20H24v8h11.303c-1.649,4.657-6.08,8-11.303,8c-6.627,0-12-5.373-12-12c0-6.627,5.373-12,12-12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C12.955,4,4,12.955,4,24c0,11.045,8.955,20,20,20c11.045,0,20-8.955,20-20C44,22.659,43.862,21.35,43.611,20.083z"></path>
                                <path fill="#FF3D00" d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z"></path>
                                <path fill="#4CAF50" d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36c-5.202,0-9.619-3.317-11.283-7.946l-6.522,5.025C9.505,39.556,16.227,44,24,44z"></path>
                                <path fill="#1976D2" d="M43.611,20.083H42V20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571c0.001-0.001,0.002-0.001,0.003-0.002l6.19,5.238C36.971,39.205,44,34,44,24C44,22.659,43.862,21.35,43.611,20.083z"></path>
                                <span style="margin-left:20px" class="social"><b id="social-text">GOOGLE</b></span>
                            </svg>                           
                        </button>


                        <div style="margin-top:30px">
                            No Login? No Problem! <a style="color:#2c4964; font-style:italic" asp-action="Index" asp-controller="User">SIGN UP FOR FREE</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

