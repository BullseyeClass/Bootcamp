@model IEnumerable<Blogs>
@{
    ViewData["Title"] = "Learn To Code";

}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/LearnToCode.css" asp-append-version="true" />




<div class="container">

    <div class="container">
        <div class="card-wrapper">
   
            @foreach(var item in Model)
            {
               
                @if (item.Category.Contains("Blog"))
                {

                                <div class="my-card">
                                    <div class="image">
                                        <img src="@item.Image" alt="image">
                                    </div>
                                    <div class="my-card-body">
                                        <h5 class="my-card-title">@item.Title</h5>
                                        <p class="card-text">@item.Content</p>
                                        <div class="card-cta"> <a href="@item.Link">Read More</a>  </div>
                                    </div>
                                </div>
                           
                }
                
            }

        </div>
    </div>


